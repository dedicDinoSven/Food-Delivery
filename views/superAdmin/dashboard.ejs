<style>
	a:link,
	a:visited {
		color: white;
	}
</style>
<div class="restaurants">
	<table class="table table-striped table-bordered table-hover caption-top text-center">
		<caption>List of Restaurants</caption>
		<thead class="table-dark">
			<td>Name</td>
			<td>Details</td>
			<td>Deactivate / activate </td>
		</thead>
		<tbody>
			<% restaurants.forEach(restaurant=> { %>
				<tr id="<%= restaurant._id %>">
					<td data-target="name">
						<%= restaurant.name %>
					</td>
					<td>
						<button class="btn btn-primary details" type="button" data-id="<%= restaurant._id %>">
							<a href="./restaurant/<%=restaurant._id%>" style="text-decoration: none;">More
								info</a></button>
					</td>
					<td>
						<% if (restaurant.active===true) { %>
							<button class="btn deactivateRestaurant" data-id="<%= restaurant._id %>">
								<i class="fas fa-trash-alt fa-lg" style="color: #ea1601"></i>
							</button>
							<% } else { %>
								<button class="btn activateRestaurant" data-id="<%= restaurant._id %>">
									<i class="fas fa-check fa-lg" style="color: #64bc26"></i>
								</button>
								<% } %>
					</td>
				</tr>
				<% }) %>
		</tbody>
	</table>
	<div class="d-grid gap-2">
		<a href="./addRestaurant" class="btn btn-primary addRestaurant" type="button" style="text-decoration: none;">Add
			new Restaurant</a>
	</div>
</div><br />

<div class="restaurant-types">
	<table class="table table-striped table-bordered table-hover caption-top text-center">
		<caption>
			List of Restaurant types
		</caption>
		<thead class="table-dark">
			<td style="width: 45%;">Name</td>
			<td style="width: 35%;">Update</td>
			<td style="width: 20%;">Deactivate / Activate</td>
		</thead>
		<tbody>
			<% restaurantTypes.forEach((type)=> { %>
				<tr id="<%= type._id %>">
					<td data-target="name">
						<%= type.name %>
					</td>
					<td>
						<button class="btn update" type="button" data-id="<%= type._id %>" data-bs-toggle="modal"
							data-bs-target="#updateModal" data-group="Restaurant">
							<i class="fas fa-edit fa-lg"></i></button>
					</td>
					<td>
						<% if (type.active===true) { %>
							<button class="btn deactivate" data-id="<%= type._id %>" data-group="Restaurant">
								<i class="fas fa-trash-alt fa-lg" style="color: #ea1601"></i>
							</button>
							<% } else { %>
								<button class="btn activate" data-id="<%= type._id %>" data-group="Restaurant">
									<i class="fas fa-check fa-lg" style="color: #64bc26"></i>
								</button>
								<% } %>
					</td>
				</tr>
				<% }) %>
		</tbody>
	</table>
	<div class="d-grid gap-2">
		<button class="btn btn-primary addNew" type="button" data-bs-toggle="modal" data-bs-target="#addNewModal"
			data-group="Restaurant">Add new Restaurant type</button>
	</div>
</div><br />

