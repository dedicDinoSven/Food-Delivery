<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                Add product to <%=specialOffer.name %> Offer 
            </h1>
            <form method="POST" action="/admin/addProductToOffer/<%= specialOffer._id %>">
                <div class="form-group mb-2">
                    <select class="form-select" id="offerProduct" name="offerProduct">
                        <option disabled selected hidden>Select Product
                        </option>
                        <% products.forEach(product=> { %>
                            <option>
                                <%= product.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>