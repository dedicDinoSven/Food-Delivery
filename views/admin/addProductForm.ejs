<div class="modal fade" id="addProductModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New product
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/admin/addProduct/<%=restaurant._id%>" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group mb-2">
                        <select class="form-select" id="productMenu" name="productMenu">
                            <option disabled selected hidden>Select Menu type
                            </option>
                            <% menuTypes.forEach(type=> { %>
                                <option>
                                    <%= type.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="form-group mb-2">
                        <input type="text" id="productName" name="productName" class="form-control"
                            placeholder="Enter Product name" />
                    </div>
                    <div class="form-group mb-2">
                        <textarea rows="3" id="productDesc" name="productDesc" class="form-control"
                            placeholder="Enter Product description"></textarea>
                    </div>
                    <div class="mb-2 row">
                        <div class="form-group col">
                            <input type="text" id="productPrice" name="productPrice" class="form-control"
                                placeholder="Enter Product price (BAM)" />
                        </div>
                        <div class="form-group col">
                            <input type="file" accept="image/*" id="productPhoto" name="productPhoto"
                                class="form-control" placeholder="Add Product photo" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-block" data-bs-dismiss="modal">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>